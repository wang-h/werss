# ==================== 数据库配置 ====================
POSTGRES_WERSS_DB=werss_db
POSTGRES_DB=werss_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_password_here
POSTGRES_PORT=5432

# ==================== WeRSS 管理员账号 ====================
WERSS_USERNAME=admin
WERSS_PASSWORD=your_password_here

# ==================== 域名配置 ====================
DOMAIN=example.com
ACME_EMAIL=admin@example.com
ADMIN_PASSWORD=your_password_here
# ==================== Traefik Dashboard 认证 ====================
# 当前密码: admin123
# 生成新密码: echo $(htpasswd -nb admin your_password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== Webhook 配置 ====================
DINGDING_WEBHOOK=
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your_webhook_id_here
WECHAT_WEBHOOK=

# ==================== WeRSS 功能配置 ====================
ENABLE_JOB=True
GATHER_CONTENT=True
GATHER_MODEL=app
GATHER_CONTENT_AUTO_CHECK=False
THREADS=2
SPAN_INTERVAL=10
MAX_PAGE=5
SEND_CODE=True
LOG_LEVEL=INFO
DEBUG=False
BROWSER_TYPE=firefox

# ==================== 数据目录 ====================
DATA_DIR=/home/werss

# ==================== OPENAI API 配置 ====================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4o
OPENAI_RPM_LIMIT=60
OPENAI_TIMEOUT=60

# ==================== AI Processor 配置 ====================
ENABLE_AUTO_PROCESS=true
SCAN_INTERVAL_MINUTES=60
MAX_BATCH_SIZE=100
LOOKBACK_DAYS=7
MAX_CONCURRENT_TASKS=50
# ==================== Article Agent 配置 ====================
ARTICLE_AGENT_SCHEDULER=true
ARTICLE_AGENT_CRON_HOUR=8
ARTICLE_AGENT_CRON_MINUTE=0
# ==================== MinIO 对象存储配置 ====================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your_password_here

# 应用程序使用（初始化脚本会生成）
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_secret_key_here
MINIO_BUCKET=werss-images
MINIO_PUBLIC_URL=http://localhost:9000



# 图片生成开关
GENERATE_IMAGES=true
INSERT_IMAGE_IN_CONTENT=true
